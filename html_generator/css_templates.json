{
  "variables": {
    "primary_color": "#00693e",
    "secondary_color": "#c20430",
    "yellow": "#ff0000",
    "celeste": "#c0ddea",
    "black": "#1d1d1b",
    "gray_60": "#878787",
    "blue_footer": "#4c5da8"
  },
  "base_styles": [
    ":root{{--uach-green:{primary_color};--uach-red:{secondary_color};--uach-yellow:{yellow};--uach-celeste:{celeste};--uach-black:{black};--uach-gray-60:{gray_60};--uach-blue-footer:{blue_footer};--bg:#ffffff;--text:#1d1d1b;--link:{primary_color};--link-hover:#005433;--card-border:#e6e6e6;--radius:14px;--shadow:0 6px 24px rgba(0,0,0,.08);--container:1200px;--gutter:20px;--serif:\"EB Garamond\", Georgia, serif;--sans: system-ui, -apple-system, \"Segoe UI\", Roboto, sans-serif;}}",
    "*,*::before,*::after{{box-sizing:border-box}}",
    "html{{scroll-behavior:smooth}}",
    "body{{margin:0;background:var(--bg);color:var(--text);font-family:var(--sans);line-height:1.6;-webkit-font-smoothing: antialiased;}}",
    "img{{max-width:100%;height:auto;display:block}}",
    "a{{color:var(--link);text-decoration:none;transition:color 0.2s ease}}",
    "a:hover{{color:var(--link-hover);text-decoration:underline}}",
    ".container{{max-width:var(--container);margin:auto;padding:0 var(--gutter)}}"
  ],
  "components": {
    "header": [
      "header.site-header{{position:sticky;top:0;z-index:999;background:var(--uach-green);color:#fff;box-shadow:0 2px 8px rgba(0,0,0,0.1);transition:all 0.3s ease;}}",
      ".topbar{{display:flex;align-items:center;justify-content:space-between;gap:12px;padding:12px var(--gutter);min-height:72px;}}",
      ".brand{{display:flex;align-items:center;gap:12px;flex:1;min-width:0;}}",
      ".brand__logo img{{height:40px;width:auto;display:block}}",
      ".brand__name{{font-family:var(--serif);font-size:clamp(0.9rem, 2vw, 1.15rem);font-weight:600;color:#fff;}}",
      "nav.primary-nav{{display:flex;align-items:center;gap:clamp(12px, 2vw, 24px);}}",
      "nav.primary-nav a{{color:#fff;font-weight:600;font-size:0.95rem;padding:8px 4px;transition:opacity 0.2s ease;}}",
      "nav.primary-nav a:hover{{text-decoration:underline;opacity:0.9;}}",
      "/* Header extras */",
      ".header-extras{{display:flex;align-items:center;gap:16px;}}",
      "/* Contact info in header */",
      ".header-contact{{display:flex;align-items:center;gap:12px;font-size:0.85rem;}}",
      ".header-contact a{{color:#fff;opacity:0.9;}}",
      ".header-contact a:hover{{opacity:1;text-decoration:none;}}",
      "/* Social links in header */",
      ".header-social{{display:flex;align-items:center;gap:8px;}}",
      ".header-social a{{color:#fff;opacity:0.8;font-size:1.1rem;width:32px;height:32px;display:flex;align-items:center;justify-content:center;border-radius:50%;transition:all 0.2s ease;}}",
      ".header-social a:hover{{opacity:1;background:rgba(255,255,255,0.1);text-decoration:none;}}",
      "/* Language selector */",
      ".header-lang-selector{{position:relative;}}",
      ".header-lang-selector select{{background:transparent;border:1px solid rgba(255,255,255,0.3);color:#fff;padding:4px 8px;border-radius:4px;font-size:0.85rem;}}",
      ".header-lang-selector select option{{background:var(--uach-green);color:#fff;}}",
      "/* CTA button in header */",
      ".header-cta{{margin-left:8px;}}",
      ".header-cta .btn{{padding:8px 16px;font-size:0.9rem;}}",
      ".header-cta .btn--outline{{background:transparent;color:#fff;border-color:#fff;}}",
      ".header-cta .btn--outline:hover{{background:#fff;color:var(--uach-green);}}",
      "/* Header scroll states */",
      ".site-header.scrolled{{box-shadow:0 4px 20px rgba(0,0,0,0.15);}}",
      "/* Header animations */",
      "@keyframes slideDown{{",
      "  from{{transform:translateY(-100%);}}",
      "  to{{transform:translateY(0);}}",
      "}}",
      "@keyframes fadeIn{{",
      "  from{{opacity:0;}}",
      "  to{{opacity:1;}}",
      "}}",
      "@keyframes slideInLeft{{",
      "  from{{transform:translateX(-100%);}}",
      "  to{{transform:translateX(0);}}",
      "}}",
      "@keyframes slideInRight{{",
      "  from{{transform:translateX(100%);}}",
      "  to{{transform:translateX(0);}}",
      "}}",
      "/* Header responsive - Tablet */",
      "@media (max-width: 1024px){{",
      "  nav.primary-nav{{gap:16px;}}",
      "  nav.primary-nav a{{font-size:0.9rem;}}",
      "  .header-extras{{gap:12px;}}",
      "}}",
      "/* Header responsive - Mobile */",
      "@media (max-width: 768px){{",
      "  .topbar{{flex-wrap:wrap;padding:8px var(--gutter);min-height:60px;}}",
      "  .brand__name{{font-size:1rem;}}",
      "  .header-extras{{order:3;flex-basis:100%;justify-content:space-between;margin-top:8px;}}",
      "  .header-contact{{display:none;}}",
      "  nav.primary-nav{{order:2;gap:12px;}}",
      "  nav.primary-nav a{{font-size:0.85rem;padding:6px 4px;}}",
      "  .header-social{{gap:4px;}}",
      "}}",
      "/* Header responsive - Small Mobile */", 
      "@media (max-width: 480px){{",
      "  .topbar{{flex-direction:column;align-items:stretch;gap:8px;}}",
      "  .brand{{justify-content:center;}}",
      "  .brand__name{{text-align:center;}}",
      "  nav.primary-nav{{justify-content:center;flex-wrap:wrap;gap:8px;}}",
      "  nav.primary-nav a{{padding:8px 12px;background:rgba(255,255,255,0.1);border-radius:6px;font-size:0.8rem;}}",
      "  .header-extras{{justify-content:center;margin-top:4px;}}",
      "  .header-social{{gap:6px;}}",
      "}}"
    ],
    "hero": [
      ".hero{{position:relative;min-height:500px;display:flex;align-items:center;}}",
      ".hero__bg{{position:absolute;inset:0;background:linear-gradient(180deg, rgba(0,69,39,0.92), rgba(0,105,62,0.88));z-index:-1;}}",
      ".hero .container{{padding:0 20px 72px;position:relative;z-index:1;}}",
      "section.hero{{padding-top:0 !important;margin-top:0 !important;}}",
      ".hero__eyebrow{{display:inline-block;background:var(--uach-yellow);color:#000;font-weight:700;font-size:0.85rem;padding:.35rem .75rem;border-radius:10px;margin-bottom:16px;}}",
      ".hero__title{{font-family:var(--serif);font-size:clamp(1.75rem, 4vw, 2.8rem);line-height:1.2;margin:.5rem 0 1rem;color:#fff;text-shadow:0 2px 4px rgba(0,0,0,0.2);}}",
      ".hero__text{{max-width:64ch;color:rgba(255,255,255,0.95);font-size:clamp(1rem, 2vw, 1.125rem);line-height:1.7;}}",
      ".hero__cta{{display:flex;gap:12px;margin-top:32px;flex-wrap:wrap;}}",
      ".carousel{{position:relative;width:100%;}}",
      ".slides{{display:flex;transition:transform .6s ease;}}",
      ".slide{{flex:0 0 100%;position:relative;}}",
      ".dots{{position:absolute;left:0;right:0;bottom:20px;display:flex;gap:8px;justify-content:center;}}",
      ".dot{{width:10px;height:10px;border-radius:50%;background:rgba(255,255,255,.6);cursor:pointer;border:0;}}",
      ".dot.active{{background:#fff;}}",
      ".nav-btn{{position:absolute;top:50%;transform:translateY(-50%);background:rgba(0,0,0,.35);border:0;color:#fff;font-size:18px;border-radius:999px;width:36px;height:36px;display:flex;align-items:center;justify-content:center;cursor:pointer;}}",
      ".nav-prev{{left:12px}}",
      ".nav-next{{right:12px}}",
      "/* Hero responsive - Tablet */",
      "@media (max-width: 768px){{",
      "  .hero{{min-height:400px;}}",
      "  .hero .container{{padding:0 16px 48px;}}",
      "  .hero__cta{{gap:8px;}}",
      "  .nav-btn{{width:32px;height:32px;font-size:16px;}}",
      "  .nav-prev{{left:8px;}}",
      "  .nav-next{{right:8px;}}",
      "}}",
      "/* Hero responsive - Mobile */",
      "@media (max-width: 480px){{",
      "  .hero{{min-height:350px;}}",
      "  .hero .container{{padding:0 12px 32px;}}",
      "  .hero__eyebrow{{font-size:0.8rem;padding:.3rem .6rem;}}",
      "  .hero__cta{{flex-direction:column;align-items:stretch;gap:12px;}}",
      "  .hero__cta .btn{{text-align:center;}}",
      "}}"
    ],
    "sections": [
      "section{{padding:64px 0}}",
      ".section-head{{margin-bottom:32px}}",
      ".section-eyebrow{{font-size:.85rem;font-weight:800;text-transform:uppercase;letter-spacing:.12em;color:var(--uach-green);margin-bottom:8px;}}",
      ".section-title{{font-family:var(--serif);font-size:clamp(1.5rem, 3vw, 2.2rem);margin:.5rem 0 .75rem;line-height:1.2;}}",
      ".section-desc{{max-width:70ch;color:#555;font-size:1.05rem;line-height:1.7;}}",
      ".band{{background:#f8f9fa;}}",
      "/* Sections responsive - Tablet */",
      "@media (max-width: 768px){{",
      "  section{{padding:48px 0;}}",
      "  .section-head{{margin-bottom:24px;}}",
      "  .section-desc{{font-size:1rem;}}",
      "}}",
      "/* Sections responsive - Mobile */",
      "@media (max-width: 480px){{",
      "  section{{padding:32px 0;}}",
      "  .section-head{{margin-bottom:20px;}}",
      "}}"
    ],
    "cards": [
      ".grid{{display:grid;gap:24px}}",
      ".grid-3{{grid-template-columns:repeat(auto-fit, minmax(300px, 1fr))}}",
      ".grid-2{{grid-template-columns:repeat(auto-fit, minmax(350px, 1fr))}}",
      ".card{{background:#fff;border:1px solid var(--card-border);border-radius:14px;padding:24px;box-shadow:var(--shadow);transition:all 0.3s ease;}}",
      ".card:hover{{box-shadow:0 8px 32px rgba(0,0,0,.12);transform:translateY(-4px);}}",
      ".card h3{{margin-top:0;font-size:1.2rem;color:var(--uach-black);}}",
      ".card p{{color:#555;line-height:1.7;}}",
      ".pill{{display:inline-block;padding:.3rem .75rem;border-radius:999px;font-size:.8rem;font-weight:700;background:var(--uach-celeste);color:#00324a;margin-bottom:12px;}}",
      ".news-card{{display:flex;gap:16px;}}",
      ".news-img{{flex-shrink:0;width:60px;height:60px;display:flex;align-items:center;justify-content:center;background:#f0f0f0;border-radius:8px;font-size:1.5rem;}}",
      ".card-body{{flex:1;}}",
      ".meta{{font-size:0.85rem;color:var(--gray-60);margin-bottom:8px;}}",
      ".actions{{margin-top:16px;}}",
      "/* Cards responsive - Tablet */",
      "@media (max-width: 1024px){{",
      "  .grid-3{{grid-template-columns:repeat(auto-fit, minmax(280px, 1fr));}}",
      "  .grid-2{{grid-template-columns:repeat(auto-fit, minmax(320px, 1fr));}}",
      "  .grid{{gap:20px;}}",
      "}}",
      "/* Cards responsive - Mobile */",
      "@media (max-width: 768px){{",
      "  .grid-3{{grid-template-columns:1fr;}}",
      "  .grid-2{{grid-template-columns:1fr;}}",
      "  .grid{{gap:16px;}}",
      "  .card{{padding:20px;}}",
      "  .news-card{{flex-direction:column;align-items:center;text-align:center;}}",
      "  .news-img{{margin-bottom:12px;}}",
      "}}",
      "/* Cards responsive - Small Mobile */",
      "@media (max-width: 480px){{",
      "  .card{{padding:16px;}}",
      "  .card h3{{font-size:1.1rem;}}",
      "}}"
    ],
    "buttons": [
      ".btn{{display:inline-flex;align-items:center;gap:10px;border-radius:999px;padding:14px 24px;font-weight:700;border:2px solid transparent;cursor:pointer;transition:all 0.3s ease;font-size:0.95rem;text-decoration:none;}}",
      ".btn--primary{{background:#fff;color:var(--uach-green);box-shadow:0 2px 8px rgba(0,0,0,0.1);}}",
      ".btn--primary:hover{{background:#f2fff7;transform:translateY(-2px);text-decoration:none;}}",
      ".btn--secondary{{background:transparent;color:#fff;border-color:#fff;}}",
      ".btn--secondary:hover{{background:rgba(255,255,255,.15);transform:translateY(-2px);text-decoration:none;}}",
      ".btn--outline{{background:transparent;color:var(--uach-green);border-color:var(--uach-green);}}",
      ".btn--outline:hover{{background:var(--uach-green);color:#fff;transform:translateY(-2px);text-decoration:none;}}",
      "/* Buttons responsive - Mobile */",
      "@media (max-width: 768px){{",
      "  .btn{{padding:12px 20px;font-size:0.9rem;}}",
      "}}",
      "/* Buttons responsive - Small Mobile */",
      "@media (max-width: 480px){{",
      "  .btn{{padding:12px 16px;font-size:0.85rem;width:100%;justify-content:center;}}",
      "}}"
    ],
    "timeline": [
      ".timeline{{position:relative;margin:32px 0;padding-left:40px;}}",
      ".timeline::before{{content:\"\";position:absolute;left:12px;top:8px;bottom:8px;width:2px;background:linear-gradient(180deg, var(--uach-green), #c6c6c6);}}",
      ".tl-item{{position:relative;margin:0 0 32px;padding-left:8px;}}",
      ".tl-item::before{{content:\"\";position:absolute;left:-36px;top:6px;width:20px;height:20px;border-radius:50%;background:#fff;border:3px solid var(--uach-green);}}",
      ".tl-item h4{{margin:0 0 8px;color:var(--uach-black);font-size:1.1rem;}}",
      ".tl-item p{{color:#555;line-height:1.6;}}",
      "/* Timeline responsive - Mobile */",
      "@media (max-width: 768px){{",
      "  .timeline{{padding-left:32px;}}",
      "  .tl-item::before{{left:-28px;width:16px;height:16px;}}",
      "  .timeline::before{{left:8px;}}",
      "}}",
      "/* Timeline responsive - Small Mobile */",
      "@media (max-width: 480px){{",
      "  .timeline{{padding-left:28px;}}",
      "  .tl-item::before{{left:-24px;width:14px;height:14px;}}",
      "  .timeline::before{{left:6px;}}",
      "  .tl-item h4{{font-size:1rem;}}",
      "}}"
    ],
    "forms": [
      "form.card{{display:flex;flex-direction:column;gap:20px;}}",
      "form label{{display:flex;flex-direction:column;gap:8px;font-weight:600;}}",
      "form label span{{color:var(--uach-black);}}",
      "form input, form textarea{{width:100%;padding:12px;border:1px solid var(--card-border);border-radius:10px;font-family:inherit;transition:all 0.2s ease;}}",
      "form input:focus, form textarea:focus{{outline:none;border-color:var(--uach-green);box-shadow:0 0 0 3px rgba(0,105,62,0.1);}}",
      "form textarea{{resize:vertical;min-height:120px;}}",
      "/* Forms responsive - Mobile */",
      "@media (max-width: 480px){{",
      "  form input, form textarea{{padding:10px;}}",
      "  form textarea{{min-height:100px;}}",
      "}}"
    ],
    "footer": [
      ".site-footer{{color:#fff;background:var(--uach-blue-footer);margin-top:80px;padding:40px 0 20px;text-align:center;}}",
      ".site-footer p{{margin:8px 0;}}",
      ".site-footer a{{color:#e7eefe;transition:color 0.2s ease;}}",
      ".site-footer a:hover{{color:#fff;text-decoration:underline;}}",
      "/* Footer responsive - Mobile */",
      "@media (max-width: 768px){{",
      "  .site-footer{{margin-top:60px;padding:32px 0 16px;}}",
      "  .site-footer p{{font-size:0.9rem;}}",
      "}}",
      "/* Footer responsive - Small Mobile */",
      "@media (max-width: 480px){{",
      "  .site-footer{{margin-top:48px;padding:24px 0 12px;}}",
      "  .site-footer p{{font-size:0.85rem;line-height:1.5;}}",
      "}}"
    ],
    "utilities": [
      ".text-center{{text-align:center;}}",
      ".text-left{{text-align:left;}}",
      ".text-right{{text-align:right;}}",
      ".mt-0{{margin-top:0;}}",
      ".mt-1{{margin-top:8px;}}",
      ".mt-2{{margin-top:16px;}}",
      ".mt-3{{margin-top:24px;}}",
      ".mt-4{{margin-top:32px;}}",
      ".mb-0{{margin-bottom:0;}}",
      ".mb-1{{margin-bottom:8px;}}",
      ".mb-2{{margin-top:16px;}}",
      ".mb-3{{margin-bottom:24px;}}",
      ".mb-4{{margin-bottom:32px;}}",
      ".p-0{{padding:0;}}",
      ".p-1{{padding:8px;}}",
      ".p-2{{padding:16px;}}",
      ".p-3{{padding:24px;}}",
      ".p-4{{padding:32px;}}",
      ".hidden{{display:none;}}",
      ".visible{{display:block;}}",
      ".flex{{display:flex;}}",
      ".flex-wrap{{flex-wrap:wrap;}}",
      ".items-center{{align-items:center;}}",
      ".justify-center{{justify-content:center;}}",
      ".justify-between{{justify-content:space-between;}}",
      ".gap-1{{gap:8px;}}",
      ".gap-2{{gap:16px;}}",
      ".gap-3{{gap:24px;}}",
      ".gap-4{{gap:32px;}}",
      "/* Utilities responsive */",
      "@media (max-width: 768px){{",
      "  .mt-md-0{{margin-top:0;}}",
      "  .mt-md-1{{margin-top:6px;}}",
      "  .mt-md-2{{margin-top:12px;}}",
      "  .mb-md-0{{margin-bottom:0;}}",
      "  .mb-md-1{{margin-bottom:6px;}}",
      "  .mb-md-2{{margin-bottom:12px;}}",
      "  .text-md-center{{text-align:center;}}",
      "}}",
      "@media (max-width: 480px){{",
      "  .mt-sm-0{{margin-top:0;}}",
      "  .mb-sm-0{{margin-bottom:0;}}",
      "  .text-sm-center{{text-align:center;}}",
      "  .gap-sm-1{{gap:6px;}}",
      "  .gap-sm-2{{gap:12px;}}",
      "}}"
    ]
  }
}